<div
  id="dropzone"
  class="
    flex flex-col
    lg:w-6/12 lg:h-96
    justify-center
    items-center
    py-14
    bg-gradient-to-t
    from-neutral
    to-neutral-light
    border-2 border-dashed border-primary
    rounded-lg
    transition-colors
  "
>
  <input type="file" accept=".pdf" multiple="multiple" id="fileInput" class="hidden" />
  <i
    class="
      fas
      fa-cloud-upload-alt
      text-5xl
      bg-gradient-to-t
      from-primary
      to-primary-light
      bg-clip-text
      text-transparent
      pointer-events-none
      transition-opacity
    "
  ></i>
  <div class="py-6 text-center pointer-events-none transition-opacity">
    <p class="text-gray-light">Dateien hier ablegen</p>
    <span class="text-gray-light font-semibold uppercase opacity-50">oder</span>
  </div>
  <%- include("button.ejs", {text: "Suchen", id: "searchBtn"}) %>
</div>
